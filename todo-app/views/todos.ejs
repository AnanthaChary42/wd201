<!DOCTYPE html>
<html>

<head>
    <title>To-Do List</title>
</head>

<body>
    <h1>My To-Dos</h1>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Task</th>
                <th>Completed</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            <% todos.forEach(todo=> { %>
                <tr>
                    <td>
                        <%= todo.id %>
                    </td>
                    <td>
                        <%= todo.title %>
                    </td>
                    <td>
                        <%= todo.completed ? "Yes" : "No" %>
                    </td>
                    <td>
                        <%= new Date(todo.createdAt).toLocaleDateString() %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <%- include('footer') %>
</body>

</html>