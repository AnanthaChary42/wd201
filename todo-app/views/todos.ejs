<h5 class="text-lg font-medium mb-2 flex items-center">
    <%= title %>
        <span class="ml-2 bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded">
            <%= data.length %>
        </span>
</h5>

<ul class="space-y-2">
    <% if (data.length===0) { %>
        <li class="text-gray-400 italic">No items to show.</li>
        <% } else { %>
            <% data.forEach(todo=> { %>
                <li class="flex items-center justify-between p-2 bg-white rounded shadow">
                    <div class="flex items-center gap-2">
                        <% if (todo.completed) { %>
                            <span class="line-through text-gray-500">
                                <%= todo.title %>
                            </span>
                            <% } else { %>
                                <span>
                                    <%= todo.title %>
                                </span>
                                <% } %>
                                    <span class="text-sm text-gray-400">(Due: <%= todo.dueDate %>)</span>
                    </div>

                    <div class="flex items-center gap-2">
                        <% if (!todo.completed) { %>
                            <button onclick="updateTodo(<%= todo.id %>)"
                                class="text-sm text-green-600 hover:text-green-800">Mark as done</button>
                            <% } %>

                                <button onclick="deleteTodo(<%= todo.id %>)"
                                    class="text-sm text-red-500 hover:text-red-700">Delete</button>
                    </div>
                </li>
                <% }) %>
                    <% } %>
</ul>