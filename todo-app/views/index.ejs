<!DOCTYPE html>
<html>

<head>
    <title>To-Do Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <script>
        function updateTodo(id) {
            fetch(`/todos/${id}/markAsCompleted`, {
                method: "put",
                headers: { "Content-Type": "application/json" },
            })
                .then(res => { if (res.ok) window.location.reload(); })
                .catch(err => console.error(err));
        }
        function deleteTodo(id) {
            fetch(`/todos/${id}`, {
                method: "delete",
                headers: { "Content-Type": "application/json" },
            })
                .then(res => { if (res.ok) window.location.reload(); })
                .catch(err => console.error(err));
        }
    </script>
</head>

<body class="bg-gray-50 p-8">
    <div class="grid grid-cols-6">
        <div class="col-start-2 col-span-4">
            <%- include('header.ejs') %>

                <form action="/add-task" method="POST" class="mt-6">
                    <div class="flex gap-4 items-end">
                        <div class="flex-auto">
                            <label for="task" class="block text-sm font-medium text-gray-700 mb-1">Task</label>
                            <input id="task" name="task" type="text" placeholder="What's next?"
                                class="border border-gray-300 rounded text-gray-900 w-full p-2" required>
                        </div>
                        <div class="flex-auto">
                            <label for="dueDate" class="block text-sm font-medium text-gray-700 mb-1">Due Date</label>
                            <input id="dueDate" name="dueDate" type="date"
                                class="border border-gray-300 rounded text-gray-900 w-full p-2" required>
                        </div>
                        <div class="flex-none">
                            <button type="submit"
                                class="bg-green-600 text-white px-5 py-2 rounded hover:bg-green-700">Add Todo</button>
                        </div>
                    </div>
                </form>

                <h2 class="text-xl font-semibold mt-8 mb-2 text-red-600">Overdue</h2>
                <%- include('todos', { title: 'Overdue' , data: overdue }) %>

                    <h2 class="text-xl font-semibold mt-8 mb-2 text-yellow-600">Due Today</h2>
                    <%- include('todos', { title: 'Due Today' , data: dueToday }) %>

                        <h2 class="text-xl font-semibold mt-8 mb-2 text-green-600">Due Later</h2>
                        <%- include('todos', { title: 'Due Later' , data: dueLater }) %>

                            <h2 class="text-xl font-semibold mt-8 mb-2 text-gray-600">Completed</h2>
                            <%- include('todos', { title: 'Completed' , data: completed }) %>

        </div>
    </div>
</body>

</html>